# Twitch Access
ACCESS_TOKEN=""
EXPIRES_AT=""
TOKEN_TYPE="bearer"
SCOPE="user:read:broadcast"
CLIENT_ID=""
CLIENT_SECRET=""

TWITCH_DOWNLOADER_CLI="library/TwitchDownloaderCLI"

# twicome database
DATABASE_URL="mysql+pymysql://appuser:apppass@localhost:3306/appdb?charset=utf8mb4"
MYSQL_HOST="localhost"
MYSQL_PORT="3306"
MYSQL_USER="appuser"
MYSQL_DATABASE="appdb"
MYSQL_PASSWORD="apppass"

# OpenRouter (Community Notes)
OPENROUTER_API_KEY="sk-or-v1-"
COMMUNITY_NOTE_MODEL="openai/gpt-oss-120b"
COMMUNITY_NOTE_DISLIKE_THRESHOLD="1"
COMMUNITY_NOTE_SYSTEM_PROMPT_PATH="batch/prompts/community_note_system_prompt.txt"

# twicome webapp settings
QUICK_LINK_LOGINS=userid
DEFAULT_LOGIN=userid
# この設定がtrueの場合IP直アクセス不可
HOST_CHECK_ENABLED=true

# batch runtime environment
# run_batch.sh reads this file by default.
# You can switch with: ./run_batch.sh --env-file .env.honban
APP_ENV=development
#以下のディレクトリ設定は、APP_ENVで指定したdataの子ディレクトリ以外に指定したい場合に使用
# 未指定時の既定値（主に batch/scripts 内のフォールバック）:
# - BATCH_DATA_DIR: batch/scripts では未参照（run_batch.sh 側の既定値は ./data/${APP_ENV}）
# - TARGET_USERS_CSV: <PROJECT_ROOT>/data/default/targetusers.csv
# - VODS_CSV: <PROJECT_ROOT>/data/default/batch_twitch_vods_all.csv
# - COMMENTS_DIR: <PROJECT_ROOT>/data/default/comments
# - COMMUNITY_NOTE_BACKUP_DIR: <PROJECT_ROOT>/data/default/oldcommunitylog
# BATCH_DATA_DIR=./data/development
# TARGET_USERS_CSV=./data/development/targetusers.csv
# VODS_CSV=./data/development/batch_twitch_vods_all.csv
# COMMENTS_DIR=./data/development/comments
# COMMUNITY_NOTE_BACKUP_DIR=./data/development/oldcommunitylog

# 未指定時の既定値（build_faiss_index.py）: <PROJECT_ROOT>/faiss_config.json
FAISS_CONFIG_PATH=./faiss_config.json
